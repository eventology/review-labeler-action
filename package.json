{
  "name": "review-labeler-action",
  "version": "0.0.0-test2",
  "private": true,
  "description": "Automatically updates labels based on reviewers",
  "author": "eventology",
  "main": "build/index.js",
  "scripts": {
    "build": "webpack",
    "format": "prettier --write \"**/*.@(ts|js|json)\"",
    "format-check": "prettier --check \"**/*.@(ts|js|json)\"",
    "lint": "eslint src --ext ts",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "ci": "npm-run-all --parallel --print-label build lint test typecheck",
    "postinstall": "typesync",
    "postuninstall": "typesync",
    "release": "ts-node scripts/release.ts"
  },
  "devDependencies": {
    "@actions/core": "^1.9.1",
    "@actions/github": "^2.1.1",
    "@eventology/eslint-config": "^2.0.1",
    "@types/eslint": "^6.1.8",
    "@types/inquirer": "^6.5.0",
    "@types/jest": "^25.1.3",
    "@types/node": "^13.7.7",
    "@types/prettier": "^1.19.0",
    "@types/semver": "^7.1.0",
    "@types/webpack": "^4.41.7",
    "@types/yaml": "^1.2.0",
    "@types/yup": "^0.26.32",
    "eslint": "^6.8.0",
    "inquirer": "^7.0.6",
    "jest": "^25.1.0",
    "jest-circus": "^25.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "semver": "^7.1.3",
    "ts-jest": "^25.2.1",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.6.2",
    "typescript": "~3.8.3",
    "typesync": "^0.6.1",
    "webpack": "^4.42.0",
    "webpack-cli": "^3.3.11",
    "yaml": "^1.7.2",
    "yup": "^0.28.3"
  },
  "prettier": {
    "semi": false,
    "trailingComma": "all",
    "arrowParens": "always",
    "quoteProps": "consistent"
  },
  "eslintConfig": {
    "extends": "@eventology/eslint-config",
    "rules": {
      "import/order": "off"
    }
  }
}